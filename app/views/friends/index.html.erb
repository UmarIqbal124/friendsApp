
<% if user_signed_in? %>

<br/>
<h1>Friends List</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>

        <td>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>

        <td>
        <%= button_to "Destroy", friend, method: :delete, onclick: "return confirm('Are you sure?');",class:"btn btn-outline-danger btn-sm"  %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Hello World! </h1>
<% end %>